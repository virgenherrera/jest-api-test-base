  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Open Test",
      "type": "node",
      "request": "launch",
      "args": [
        "${workspaceFolder}/node_modules/.bin/jest",
        "--runInBand",
        "--testRegex",
        "${fileBasename}$",
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "outputCapture": "std",
      "runtimeExecutable": null
    },
    {
      "name": "Debug All Tests",
      "type": "node",
      "request": "launch",
      "args": [
        "${workspaceFolder}/node_modules/.bin/jest",
        "--runInBand"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "outputCapture": "std",
      "runtimeExecutable": null
    }
  ]
}